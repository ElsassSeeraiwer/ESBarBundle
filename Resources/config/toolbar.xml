<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="es_bar.toolbar.class">ElsassSeeraiwer\ESBarBundle\EventListener\ToolBarListener</parameter>
    </parameters>

    <services>
        <service id="es_bar.toolbar" class="%es_bar.toolbar.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="twig" />
            <argument>%es_bar.toolbar.mode%</argument>
            <argument>%es_bar.toolbar.position%</argument>
            <argument>%es_bar.toolbar.templates%</argument>
        </service>
    </services>
</container>
