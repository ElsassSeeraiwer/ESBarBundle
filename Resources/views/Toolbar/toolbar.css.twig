/***** Media query *****/
@media screen and (max-width: 779px) {
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon > * > :first-child ~ * {
        display: none;
    }

    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon > * > .eSeeraiwer-toolbar-info-piece-additional,
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon > * > .eSeeraiwer-toolbar-info-piece-additional-detail {
        display: none !important;
    }
}

@media screen and (min-width: 880px) {
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon a[href$="config"] .eSeeraiwer-toolbar-info-piece-additional {
        display: inline-block;
    }
}

@media screen and (min-width: 980px) {
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon a[href$="security"] .eSeeraiwer-toolbar-info-piece-additional {
        display: inline-block;
    }
}

@media screen and (max-width: 1179px) {
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon > * > .eSeeraiwer-toolbar-info-piece-additional {
        display: none;
    }
}

@media screen and (max-width: 1439px) {
    .eSeeraiwer-toolbar-block .eSeeraiwer-toolbar-icon > * > .eSeeraiwer-toolbar-info-piece-additional-detail {
        display: none;
    }
}